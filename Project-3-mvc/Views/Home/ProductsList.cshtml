@model IEnumerable<Project_3_mvc.ViewModel.ProductsViewModel>
@{
    ViewBag.Title = "ProductsList";
}

<h2>Laptops List</h2>
@foreach (var item in Model)
{
    <div class="card col-lg-3 table-bordered" style="margin:1%;padding:1%">
        <img class="card-img-top" src="@Url.Content(@item.ImgPath)" width="200" height="200" alt="Card image cap">
        <div class="card-body ">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">Brand:@item.Brand</p>
            <h5 class="card-title" >Price:@item.Price.ToString("#,##0.00 $")</h5>

            <input type="button" name="AddToCart" value="Add to Cart" class="btn btn-primary"  id="btnAddToCart" onclick="AddToCart(@item.itemID,@item.Price)" />
        </div>
    </div>
     }

<Script type="text/javascript">
  
    function AddToCart(item, price) {
        var formData = new FormData();
        formData.append("ItemID", item);
        formData.append("Price", price);

        $.ajax({
            async: true,
            type: 'POST',
            contentType: false,
            processData: false,
            data: formData,
            url: '/Home/ProductsList',
            success: function (data) {
                if (data.Success) {
                    $("#cartItem").text("Cart(" + data.Counter + ")");
                }
            },
            error: function () {
                alert("There is some problem.");
            }
        });
               }

</Script>
