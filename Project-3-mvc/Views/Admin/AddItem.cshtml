@model Project_3_mvc.Models.ProductsModel

@{

    ViewBag.Title = "AddItem";
}

<h2>Add Product</h2>



@Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <strong>Product Name:</strong>

            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <strong>Product Price:</strong>


            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <strong>Product Brand:</strong>


            @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <strong>Product Image:</strong>
            @Html.TextBoxFor(model => model.ImgPath, new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ImgPath, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class=" col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" id="btnSave" onclick="SaveItem()" />
            <input type="reset" value="Reset" class="btn btn-danger" id="ResetItem" />

        </div>
    </div>
</div>
<Script type="text/javascript">



    function ResetItem() {
        $("#Name").val("1");
        $("#Price").val("");
        $("#Brand").val("");
        $("#ImgPath").val("");

    }
    function SaveItem() {

        var formData = new FormData();
        formData.append("Name", $("#Name").val());
        formData.append("Price", $("#Price").val());
        formData.append("Brand", $("#Brand").val());
        formData.append("ImgPath", $("#ImgPath").get(0).files[0]);

        $.ajax({
            async: true,
            dataType: 'JSON',
            type: 'POST',
            contentType: false,
            processData: false,
            url: '/Admin/AddItem',
            data: formData,
            success: function (data) {
                if (data.Success) {
                    alert(data.Message);
                    ResetItem();
                }
            },
            error: function () {
                alert("There is some problem to add Item.");
            }
        });
    }

</Script>
