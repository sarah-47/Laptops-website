@model IEnumerable<Project_3_mvc.ViewModel.OrdersViewModel>

@{
    ViewBag.Title = "ShopppingCart";
    decimal TotalAmount = 0;


}
@using (Html.BeginForm("ShopppingCart", "Customer", FormMethod.Post)) {
    <h2>Cart</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Cost</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(@item.ImgPath)" width="50" height="50" alt="Card image cap">
                </td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.TotalCost</td>
                <td>
                    <input type="button" value="Delete" class="btn btn-danger" onclick="delet(@item.OrderID)" />
                </td>


            </tr>
            TotalAmount += item.TotalCost;
        }
        <tr>
            <td style="text-align: right">
                <h3>Total Amount</h3>
            </td>
            <td style="text-align: right">
                <h3>@TotalAmount.ToString("#,##0.00 $")</h3>
            </td>
        </tr>
        <tr align="right" >
            <td></td><td></td>
                     <td style="text-align: right">
                         <a href='@Url.Action("ConfirmOrder", "Customer")' class="btn btn-primary">Confirm Order</a>

                         

                     </td>
        </tr>
    </tbody>
</table>

<Script type="text/javascript">
   
    function delet(id) {
                var formData = new FormData();
                formData.append("OrderID", id);

                $.ajax({
                    async: true,
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    data: formData,
                    url: '/Customer/DeletProduct',
                    data: formData,
                    success: function (data) {
                        if (data.Success) {
                            alert(data.Message);
                            ResetItem();
                        }
                    },
                    error: function () {
                        alert("There is some problem to add Item.");
                    }
                });
            }

</Script>
 }